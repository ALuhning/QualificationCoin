{
  "name": "truffle-dappchain-example",
  "description": "Simple example of Truffle interacting with Loom DappChain",
  "scripts": {
    "truffle": "truffle",
    "deploy:reset": "truffle deploy --reset --network loom_dapp_chain",
    "deploy": "truffle deploy --network loom_dapp_chain",
    "deploy:extdev": "truffle deploy --network extdev_plasma_us1",
    "deploy:reset:extdev": "truffle deploy --reset --network extdev_plasma_us1",
    "deploy:rinkeby": "truffle deploy --network rinkeby",
    "deploy:reset:rinkeby": "truffle deploy --reset --network rinkeby",
    "test": "truffle test --network loom_dapp_chain",
    "test:extdev": "truffle test --network extdev_plasma_us1",
    "serve": "webpack-dev-server --hot --content-base ./dist",
    "serve:extdev": "NETWORK=extdev yarn run serve",
    "gen:rinkeby-key": "node ./scripts/gen-eth-key.js rinkeby",
    "get:loom": "if [ ! -d loom ]; then mkdir loom && cd loom && curl https://raw.githubusercontent.com/loomnetwork/loom-sdk-documentation/master/scripts/get_loom.sh | sh && chmod +x ./loom && cd ..; fi",
    "gen:extdev-key": "npm run get:loom && ./loom/loom genkey -k extdev_private_key -a extdev_public_key",
    "gen:loom-key": "npm run get:loom && ./loom/loom genkey -k loom_private_key -a loom_public_key",
    "loom:init": "cd loom && chmod +x loom && ./loom init -f && cd ..",
    "loom:run": "cd loom && ./loom run && cd .."
  },
  "dependencies": {
    "@binance-chain/javascript-sdk": "^2.16.2",
    "bip39": "^3.0.2",
    "bn.js": "^5.0.0",
    "commander": "^4.0.1",
    "ethereumjs-tx": "^2.1.1",
    "ethereumjs-wallet": "^0.6.3",
    "js-sha256": "^0.9.0",
    "loom-js": "^1.71.0",
    "loom-truffle-provider": "^0.13.0",
    "@openzeppelin/contracts": "^2.4.0",
    "truffle": "^5.1.4",
    "@truffle/hdwallet-provider": "^1.0.27",
    "truffle-privatekey-provider": "^1.3.0",
    "web3": "^1.2.4",
    "web3-eth-accounts": "^1.2.4",
    "web3-eth": "^1.2.4",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-apexcharts": "^1.3.3",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.0",
    "redux": "^4.0.4",
    "redux-form": "^8.2.6",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.6.0",
    "request": "^2.88.0",
    "reselect": "^4.0.0",
    "dotenv": "^8.2.0",
    "moment": "^2.24.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/polyfill": "^7.7.0",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/runtime": "^7.7.6",
    "@babel/register": "^7.7.4",
    "@babel/cli": "^7.7.5",
    "babel-loader": "^8.0.6",
    "regenerator-runtime": "^0.11.1",
    "request-promise": "^4.2.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
